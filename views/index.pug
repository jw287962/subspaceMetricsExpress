doctype html
html(lang="en")
  head
    link(rel="stylesheet" type="text/css" href="/styles.css")
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Node Status

  body
    h1 Node Status

    if nodeDisplayData
      .node-status
        p Node Status: Running
        p Hostname: #{nodeDisplayData.nodeIp}
        p Synced: #{nodeDisplayData.nodeSyncState ? 'Yes' : 'No'}
        p Peers: #{nodeDisplayData.nodePeersConnected}

    hr

    each pc in farmerDisplaySector
      each detail in pc
        .farmer-details
          h2.center Name: #{detail.Name}
          div.line1
              p Status: âœ” #{detail.SummaryData.Uptime.FormattedTime}
              p Hostname: #{detail.FarmerIp}
          div.line2
            div.row
              p Sector Time: #{detail.SummaryData.TotalSectorTime.formattedSectorTime}
              p #{detail.Performance[0].SectorsPerHour} Sectors per Hr 
              p Rewards: #{detail.SummaryData.TotalRewards} total, 
              p #{detail.SummaryData.TotalRewardsPerHour} per Hr,
              p #{(detail.SummaryData.TotalRewardsPerHour * 24).toFixed(2)} per Day
            div.row
              p Remain: #{detail.SummaryData.TotalETA}
              p #{detail.SummaryData.TotalPercentComplete}% Complete 
              p #{detail.SummaryData.TotalSize}TiB 
          div.tablediv
            table
              thead
                tr
                  th.Disk-Id Disk Id
                  th.Size Size(TB)
                  th.Percent-Complete % Comp
                  th.ETA ETA(Days)
                  th.Sectors-Hr Sectors/Hr
                  th.Min-Sector Min/Sector
                  th.Reward Reward
                  th.Miss Miss
              tbody
                each id in detail
                  tr
                    td= id.Id
                  each perf in detail.Performance
                    td= perf.SectorsPerHour
                    td= perf.MinutesPerSector
